mixin tipCard(tip, index)
  .tip
    p.num= index+1
    h3.title= tip.name
    .votes(id=`votes-${tip._id}`)
      //- if user already voted, show only total votes 
      if tip.ips.includes(ip)
        p.total(id=`total-${tip._id}`) #{tip.votes}
      else
        p ¿Te ha servido?
        form.up(action=`/vote/${tip._id}/up` method="POST")
          input(type="submit" value="👍")
        //- p.total(id=`total-${tip._id}`) #{tip.votes}
        form.down(action=`/vote/${tip._id}/down` method="POST")
          input(type="submit" value="👎")
    .more
      p.desc= tip.desc
      p.cat= tip.category
